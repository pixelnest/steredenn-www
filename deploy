#!/bin/bash

DESTINATION=$1

if [ -z "$DESTINATION" ]; then
  echo "Error: no user@server argument. Abort..."
  exit 0
fi

bundle exec jekyll build
scp -r _site $DESTINATION:/var/www/steredenn.pixelnest.io/

ssh $DESTINATION 'cd /var/www/steredenn.pixelnest.io/ && \
                  rm -rf classic && \
                  mv _site classic && \
                  mv classic/public/ public/ && \
                  service nginx restart'
